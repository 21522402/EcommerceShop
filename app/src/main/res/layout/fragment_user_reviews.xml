<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/topControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_back"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đánh giá của tôi"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:textSize="16dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/status_order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topControl"
            android:layout_marginTop="16dp"
        >
                <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="3"
                        android:rowCount="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_gravity="fill"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đã đánh giá"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/primary_red"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/primary_red"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_row="0"

                            android:layout_gravity="fill"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chưa đánh giá"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/secondary_gray"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_column="2"
                            android:layout_row="0"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            android:layout_gravity="fill"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đánh giá"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/secondary_gray"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </GridLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_order_list"
        android:layout_marginTop="26dp"
        >
        <ListView
            android:id="@+id/listReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>