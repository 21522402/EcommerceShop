<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/backgroud_image_favorite_product">



    <androidx.cardview.widget.CardView
            android:id="@+id/cardviewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/imageProduct"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:src="@drawable/favorite_product"/>
        </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/typeProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato_regular"
            android:text="Phone"
            android:textColor="@color/primary_gray_text"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/nameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_bold"
            android:text="iPhone 13 Pro max"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_below="@+id/typeProduct"/>

        <LinearLayout
            android:id="@+id/color_branch"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/nameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="Color: "
                android:textColor="@color/primary_gray_text"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/colorProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="Black"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="11sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="Branh: "
                android:textColor="@color/primary_gray_text"
                android:textSize="11sp"
                android:layout_marginLeft="52dp"/>

            <TextView
                android:id="@+id/branchProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="Apple"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/color_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/priceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="32 $"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <RatingBar
                style = "?android:attr/ratingBarStyleSmall"
                android:rating="3"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">
        <ImageButton
            android:contentDescription="null"
            android:id="@+id/buttonCloseFavoriteProduct"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/icon_close_favorite_product"
            android:tooltipText="close"/>


        <ImageButton
            android:contentDescription="null"
            android:id="@+id/buttonAddToCart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/button_add_to_giohang"
            android:tooltipText="Add to your cart"/>
    </LinearLayout>
</LinearLayout>