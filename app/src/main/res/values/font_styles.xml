<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="heading1">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">31sp</item>
    </style>

    <style name="heading2">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="heading3">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="body">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tab_title" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="button">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="caption" >
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="small_caption" >
        <item name="fontFamily">@font/lato_light</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="colorAccent">@color/primary_red</item>
    </style>
</resources>